<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" 
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:s="http://jboss.com/products/seam/taglib"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:c="http://java.sun.com/jstl/core">
      
<ui:composition>
	
	<h:form id="search">
		<table>
	        <tr>
	            <td class="label">
	            	<h:outputText value="#{messages['search']}" />
	            </td>
	            <td class="select">
	            	<h:selectOneMenu value="#{searchCategory}" required="false" converter="#{categoryConverter}">
					  <s:selectItems value="#{shoppingBean.categoriesForSearch}" var="c" label="#{c.name}" noSelectionLabel="#{messages['igdo']}" />
					</h:selectOneMenu>
	            </td>
	            <td class="input">
	            	<h:inputText id="search_field" type="text" styleClass="searchField" value="#{searchingAction.searchPattern}" />
	            </td>
	            <td class="submit">
	            	<h:commandButton value=" " id="search_submit" styleClass="searchSubmit" action="/pages/search/search.jspx" />
	            </td>
	        </tr>
	    </table>
	    
	</h:form>

</ui:composition>

</html>
